<!DOCTYPE html>
<html>
<head>
  <title>Workflows DemoApp</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>


<div class="container-fluid">
  <%= render 'layouts/header' %>
  <% if !flash.empty?%>
  <div class="row">
  <% if flash[:alert]%>  
  <div class="alert alert-error offset3 span12">
    <%= flash[:alert]%>
  <% elsif flash[:msg] %>
  <div class="alert alert-success offset3 span12">
    <%= flash[:msg]%>
  <% elsif flash[:workflow] %>
  <div class="alert alert-error offset3 span12">
    <%= flash[:workflow]%>
  <% end %>
  </div>
  </div>
  <% end %>
  <%= yield %>
</div>
</body>
</html>
